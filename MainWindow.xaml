<Window x:Class="AdPatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdPatcher"
        mc:Ignorable="d"
        Title="AdPatcher" Height="300" Width="250" ResizeMode="NoResize">
    <Grid Height="284">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Patch" HorizontalAlignment="Left" Height="70" Margin="25,65,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontSize="24" Grid.ColumnSpan="2"/>
        <Label Content="Output:" HorizontalAlignment="Left" Height="30" Margin="25,141,0,0" VerticalAlignment="Top" Width="200" FontSize="11" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Height="72" Margin="25,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Background="Gainsboro" Text="..." IsReadOnly="True" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Path" HorizontalAlignment="Left" Height="26" Margin="25,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" TextChanged="TextBox_TextChanged" Text="..." Grid.ColumnSpan="2"/>
        <Label Content="Path to app.asar:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="200" FontSize="11" Margin="25,10,0,0" Grid.ColumnSpan="2"/>
        <Button Grid.Column="1" Content="File" HorizontalAlignment="Left" Margin="167,34,0,0" VerticalAlignment="Top" Width="30" Height="26" Click="Button_Click_1"/>
    </Grid>
</Window>
